<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:id="@+id/traceroute_rootview"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/login_bg2">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="42dp"
        android:layout_gravity="center"
        android:src="@drawable/login_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:background="@drawable/login_background"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="1"
        android:orientation="vertical">
        <EditText
            android:id="@+id/username"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:hint="账号"
            android:textColorHint="#afb3b6"
            android:singleLine="true"
            android:background="@drawable/edit_frame_color"
            android:cursorVisible="true"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/password"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:hint="密码"
            android:cursorVisible="true"
            android:textColorHint="#afb3b6"
            android:inputType="textPassword"
            android:background="@drawable/edit_frame_color"
            android:singleLine="true"
            android:textColor="#000000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="登录"
            android:onClick="change_roll"
            android:id="@+id/button_left"
            android:textColor="@drawable/button_text_color"
            android:background="@drawable/button_change"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="68dp"
                android:layout_height="40dp"
                android:layout_marginLeft="28dp"
                android:text="保存密码"
                android:textColor="#80000000"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="15dp"/>
            <CheckBox
                android:id="@+id/cbStorePass"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:gravity="center"
                android:visibility="visible"
                android:checked="true"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="80dp"
                android:textColor="#787c80"
                android:textSize="15dp"
                android:gravity="center"
                android:textAlignment="center"
                android:text="新用户注册"
                android:onClick="change_alpha"
                android:id="@+id/bt_register"
                android:background="#00000000"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">

        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/login_qq"
            android:layout_marginRight="12dp"/>
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/login_wechat"
            android:layout_marginRight="12dp"/>
        <Button
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/login_microblog"
            android:textColor="@drawable/button_text_color"/>

    </LinearLayout>

</LinearLayout>


